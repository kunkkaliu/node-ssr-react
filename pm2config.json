{
  "apps": [
    {
      "name": "node-ssr-react",
      "cwd": "./",
      "script": "./dist/server/index.js",
      "env": {
        "NODE_ENV": "production"
      },
      "min_uptime": "60s",
      "max_restarts": 30,
      "watch": [
        "dist/"
      ],
      "ignore_watch": [
        "node_modules/",
        "build/",
        "server/",
        "src/",
        "logs/"
      ],
      "max_memory_restart": "300M",
      "instances": 0,
      "exec_mode": "cluster",
      "merge_logs": true,
      "error_file": "./logs/pm2-err.log",
      "out_file": "./logs/pm2-out.log",
      "log_date_format": "\\[YYYY-MM-DD HH:mm:ss\\]"
    }
  ]
}